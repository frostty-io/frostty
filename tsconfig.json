{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ],
            "@/*": [
                "src/renderer/src/*"
            ],
            "@resources/*": [
                "resources/*"
            ]
        }
    },
    "include": [
        "src/renderer/src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}